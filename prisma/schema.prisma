model AcademicPosition {
  id          Int         @id @default(autoincrement()) @map("id")
  sequence    Int         @unique @default(0) @map("sequence")
  nameTh      String      @unique @map("name_th")
  nameEn      String      @map("name_en")
  shortNameTh String      @map("short_name_th")
  shortNameEn String      @map("short_name_en")
  professors  Professor[]

  @@map("academic_positions")
}

model ForgetPasswordCredential {
  id             Int       @id @default(autoincrement()) @map("id")
  refferenceCode String    @unique @default(uuid()) @map("reference_code") @db.Uuid
  userID         Int       @map("user_id")
  expiredAt      DateTime  @default(dbgenerated("NOW() + INTERVAL '5 minutes'")) @map("expired_at")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")
  deletedAt      DateTime? @map("deleted_at")
  createdBy      Int       @map("created_by")
  updatedBy      Int       @map("updated_by")

  @@map("forget_password_credentials")
}

model NewsFeatures {
  id           Int       @id @default(autoincrement()) @map("id")
  thumbnailURL String    @map("thumbnail_url")
  newsID       Int       @map("news_id")
  tagID        Int       @map("type_id")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")
  deletedAt    DateTime? @map("deleted_at")
  createdBy    Int       @map("created_by")
  updatedBy    Int       @map("updated_by")
  news         News      @relation(fields: [newsID], references: [id])
  tag          Tag       @relation(fields: [tagID], references: [id])

  @@unique([newsID, tagID])
  @@map("news_features")
}
