generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Role {
  id        Int        @id @default(autoincrement()) @map("id")
  name      String     @unique @map("name")
  userRoles UserRole[]

  @@map("roles")
}

model UserRole {
  id        Int       @id @default(autoincrement()) @map("id")
  createdBy Int       @map("created_by")
  roleID    Int       @map("role_id")
  updatedBy Int       @map("updated_by")
  userID    Int       @map("user_id")
  createdAt DateTime  @default(now()) @map("created_at")
  deletedAt DateTime? @map("deleted_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  role      Role      @relation(fields: [roleID], references: [id])
  user      User      @relation(fields: [userID], references: [id])

  @@unique([userID, roleID])
  @@map("user_roles")
}

model User {
  id          Int       @id @default(autoincrement()) @map("id")
  email       String    @unique @map("email")
  password    String?   @map("password")
  firstNameEn String?   @map("first_name_en")
  firstNameTh String    @map("first_name_th")
  imageUrl    String?   @map("image_url")
  lastNameEn  String?   @map("last_name_en")
  lastNameTh  String    @map("last_name_th")
  nickName    String?   @map("nick_name")
  createdBy   Int       @map("created_by")
  updatedBy   Int?      @map("updated_by")
  createdAt   DateTime  @default(now()) @map("created_at")
  deletedAt   DateTime? @map("deleted_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  userRoles UserRole[]
  student   Student?
  professor Professor?

  @@map("users")
}

model TageGroups {
  id   Int    @id @default(autoincrement()) @map("id")
  name String @unique @map("name")
  tags Tag[]

  @@map("tag_groups")
}

model Tag {
  id           Int            @id @default(autoincrement()) @map("id")
  name         String         @unique @map("name")
  tageGroups   TageGroups?    @relation(fields: [tageGroupsId], references: [id])
  tageGroupsId Int            @map("tage_groups_id")
  news         News[]
  newsFeatures NewsFeatures[]

  @@map("tags")
}

model News {
  id           Int            @id @default(autoincrement()) @map("id")
  title        String         @map("title")
  image        String         @map("image")
  detail       String         @map("detail")
  startDate    DateTime       @map("start_date")
  dueDate      DateTime?      @map("due_date")
  createdAt    DateTime       @default(now()) @map("created_at")
  updatedAt    DateTime       @default(now()) @updatedAt @map("updated_at")
  deletedAt    DateTime?      @map("deleted_at")
  createdBy    Int            @map("created_by")
  updatedBy    Int            @map("updated_by")
  tagID        Int            @map("tag_id")
  tag          Tag            @relation(fields: [tagID], references: [id])
  newsFeatures NewsFeatures[]

  @@map("news")
}

model Student {
  id          Int       @id @default(autoincrement()) @map("id")
  classBookID Int       @map("classbook_id")
  userID      Int       @unique @map("user_id")
  studentCode String    @map("student_code")
  linkedin    String?   @map("linkedin")
  facebook    String?   @map("facebook")
  instagram   String?   @map("instagram")
  github      String?   @map("github")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  deletedAt   DateTime? @map("deleted_at")
  createdBy   Int       @map("created_by")
  updatedBy   Int       @map("updated_by")
  user        User      @relation(fields: [userID], references: [id])
  classBook   ClassBook @relation(fields: [classBookID], references: [id])

  @@map("students")
}

model Curriculum {
  id           Int         @id @default(autoincrement()) @map("id")
  year         String      @map("year")
  documentURL  String      @map("document_url")
  description  String      @map("description")
  thumbnailURL String      @map("thumbnail_url")
  createdBy    Int         @map("created_by")
  updatedBy    Int         @map("updated_by")
  createdAt    DateTime    @default(now()) @map("created_at")
  updatedAt    DateTime    @updatedAt @map("updated_at")
  deletedAt    DateTime?   @map("deleted_at")
  courses      Course[]
  classBooks   ClassBook[]

  @@map("curriculums")
}

model Professor {
  id                 Int       @id @default(autoincrement()) @map("id")
  userID             Int       @unique @map("user_id")
  profRoom           String    @map("prof_room")
  phone              String    @map("phone")
  expertFields       String?   @map("expert_fields")
  educations         String?   @map("educations")
  createdBy          Int       @map("created_by")
  updatedBy          Int       @map("updated_by")
  academicPositionID Int       @map("academic_position_id")
  createdAt          DateTime  @default(now()) @map("created_at")
  deletedAt          DateTime? @map("deleted_at")
  updatedAt          DateTime  @updatedAt @map("updated_at")

  user             User             @relation(fields: [userID], references: [id])
  academicPosition AcademicPosition @relation(fields: [academicPositionID], references: [id])

  @@map("professors")
}

model TypeCourse {
  id          Int      @id @default(autoincrement()) @map("id")
  type        String   @unique @map("name")
  description String   @map("description")
  courses     Course[]

  @@map("type_courses")
}

model Course {
  id           Int        @id @default(autoincrement()) @map("id")
  courseCode   String     @map("course_code")
  detail       String     @map("detail")
  courseNameEn String     @map("course_name_en")
  courseNameTh String     @map("course_name_th")
  credits      String     @map("credits")
  typeCourseID Int        @map("type_course_id")
  curriculumID Int        @map("curriculum_id")
  createdBy    Int        @map("created_by")
  updatedBy    Int        @map("updated_by")
  createdAt    DateTime   @default(now()) @map("created_at")
  deletedAt    DateTime?  @map("deleted_at")
  updatedAt    DateTime   @updatedAt @map("updated_at")
  typeCourse   TypeCourse @relation(fields: [typeCourseID], references: [id])
  curriculum   Curriculum @relation(fields: [curriculumID], references: [id])

  @@map("courses")
}

model ClassBook {
  id                Int        @id @default(autoincrement()) @map("id")
  classof           String     @unique @map("classof")
  firstYearAcademic String     @map("first_year_academic")
  thumbnailURL      String     @map("thumbnail_url")
  curriculumID      Int        @map("curriculum_id")
  createdAt         DateTime   @default(now()) @map("created_at")
  updatedAt         DateTime   @updatedAt @map("updated_at")
  deletedAt         DateTime?  @map("deleted_at")
  createdBy         Int        @map("created_by")
  updatedBy         Int        @map("updated_by")
  curriculum        Curriculum @relation(fields: [curriculumID], references: [id])
  students          Student[]

  @@map("class_books")
}

